<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaou.system.mapper.SysAdminMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.xiaou.system.domain.SysAdmin">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="TINYINT"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="TIMESTAMP"/>
        <result column="last_login_ip" property="lastLoginIp" jdbcType="VARCHAR"/>
        <result column="login_count" property="loginCount" jdbcType="INTEGER"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, username, password, real_name, email, phone, avatar, gender, status,
        last_login_time, last_login_ip, login_count, remark, create_time, update_time,
        create_by, update_by
    </sql>

    <!-- 查询条件 -->
    <sql id="selectCondition">
        <where>
            <if test="admin.id != null">
                AND id = #{admin.id}
            </if>
            <if test="admin.username != null and admin.username != ''">
                AND username LIKE CONCAT('%', #{admin.username}, '%')
            </if>
            <if test="admin.realName != null and admin.realName != ''">
                AND real_name LIKE CONCAT('%', #{admin.realName}, '%')
            </if>
            <if test="admin.email != null and admin.email != ''">
                AND email = #{admin.email}
            </if>
            <if test="admin.phone != null and admin.phone != ''">
                AND phone = #{admin.phone}
            </if>
            <if test="admin.gender != null">
                AND gender = #{admin.gender}
            </if>
            <if test="admin.status != null">
                AND status = #{admin.status}
            </if>
        </where>
    </sql>

    <!-- 根据ID查询管理员 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_admin
        WHERE id = #{id}
    </select>

    <!-- 根据用户名查询管理员 -->
    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_admin
        WHERE username = #{username}
        AND status != 2
    </select>

    <!-- 根据邮箱查询管理员 -->
    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_admin
        WHERE email = #{email}
        AND status != 2
    </select>

    <!-- 查询管理员列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_admin
        <include refid="selectCondition"/>
        ORDER BY create_time DESC
    </select>

    <!-- 查询管理员总数 -->
    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM sys_admin
        <include refid="selectCondition"/>
    </select>

    <!-- 新增管理员 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="admin.id">
        INSERT INTO sys_admin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="admin.username != null">username,</if>
            <if test="admin.password != null">password,</if>
            <if test="admin.realName != null">real_name,</if>
            <if test="admin.email != null">email,</if>
            <if test="admin.phone != null">phone,</if>
            <if test="admin.avatar != null">avatar,</if>
            <if test="admin.gender != null">gender,</if>
            <if test="admin.status != null">status,</if>
            <if test="admin.loginCount != null">login_count,</if>
            <if test="admin.remark != null">remark,</if>
            <if test="admin.createBy != null">create_by,</if>
            create_time,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="admin.username != null">#{admin.username},</if>
            <if test="admin.password != null">#{admin.password},</if>
            <if test="admin.realName != null">#{admin.realName},</if>
            <if test="admin.email != null">#{admin.email},</if>
            <if test="admin.phone != null">#{admin.phone},</if>
            <if test="admin.avatar != null">#{admin.avatar},</if>
            <if test="admin.gender != null">#{admin.gender},</if>
            <if test="admin.status != null">#{admin.status},</if>
            <if test="admin.loginCount != null">#{admin.loginCount},</if>
            <if test="admin.remark != null">#{admin.remark},</if>
            <if test="admin.createBy != null">#{admin.createBy},</if>
            NOW(),
        </trim>
    </insert>

    <!-- 修改管理员 -->
    <update id="update">
        UPDATE sys_admin
        <set>
            <if test="admin.realName != null">real_name = #{admin.realName},</if>
            <if test="admin.email != null">email = #{admin.email},</if>
            <if test="admin.phone != null">phone = #{admin.phone},</if>
            <if test="admin.avatar != null">avatar = #{admin.avatar},</if>
            <if test="admin.gender != null">gender = #{admin.gender},</if>
            <if test="admin.status != null">status = #{admin.status},</if>
            <if test="admin.remark != null">remark = #{admin.remark},</if>
            <if test="admin.updateBy != null">update_by = #{admin.updateBy},</if>
            update_time = NOW(),
        </set>
        WHERE id = #{admin.id}
    </update>

    <!-- 根据ID删除管理员 -->
    <update id="deleteById">
        UPDATE sys_admin 
        SET status = 2, update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 批量删除管理员 -->
    <update id="deleteByIds">
        UPDATE sys_admin 
        SET status = 2, update_time = NOW()
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>

    <!-- 更新最后登录信息 -->
    <update id="updateLastLoginInfo">
        UPDATE sys_admin
        SET last_login_time = #{lastLoginTime},
            last_login_ip = #{lastLoginIp},
            login_count = #{loginCount},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 更新密码 -->
    <update id="updatePassword">
        UPDATE sys_admin
        SET password = #{password},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 更新状态 -->
    <update id="updateStatus">
        UPDATE sys_admin
        SET status = #{status},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 检查用户名是否存在 -->
    <select id="checkUsernameExists" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM sys_admin
        WHERE username = #{username}
        AND status != 2
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 检查邮箱是否存在 -->
    <select id="checkEmailExists" resultType="java.lang.Integer">
        SELECT COUNT(1)
        FROM sys_admin
        WHERE email = #{email}
        AND status != 2
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

</mapper> 